<Window
    x:Class="Logisticsm.Windows.AddAirTransportWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.com/icons/fonts"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Logisticsm.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="addAirTransportWindow"
    Title="新增空運單號"
    Width="800"
    Height="550"
    AllowsTransparency="True"
    Background="Transparent"
    DataContext="{Binding Source={StaticResource Locator}, Path=AddAirTransport}"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Border Background="White" CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Button
                Command="{Binding ClosedCommand}"
                CommandParameter="{Binding ElementName=addAirTransportWindow}"
                Style="{StaticResource CloseStyle}" />

            <!--  標題  -->
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="18"
                Text="新增空運單號" />

            <!--  第一步  -->
            <Grid
                x:Name="firstGrid"
                Grid.Row="1"
                Width="300"
                Height="300"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Text="客戶選擇" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Text="目的地" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Text="出貨時間" />

                <ComboBox
                    Grid.Row="0"
                    Grid.Column="2"
                    Height="30"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding Customers}"
                    SelectedItem="{Binding Customer}" />

                <TextBox
                    Grid.Row="1"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Text="{Binding AirTransport.TargetPlace, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <DatePicker
                    Grid.Row="2"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    SelectedDate="{Binding AirTransport.SendDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <Button
                    Grid.Row="3"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Height="30"
                    Command="{Binding NextStepCommand}"
                    CommandParameter="{Binding ElementName=addAirTransportWindow}"
                    Content="下一步"
                    Style="{StaticResource ButtonStyle}" />

            </Grid>

            <!--  第二步  -->
            <Grid x:Name="secondGrid" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <!--  輸入項  -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        MinWidth="100"
                        VerticalAlignment="Center"
                        Text="單號"
                        TextAlignment="Right" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        MinWidth="100"
                        VerticalAlignment="Center"
                        Text="件數"
                        TextAlignment="Right" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        MinWidth="100"
                        VerticalAlignment="Center"
                        Text="重量"
                        TextAlignment="Right" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        MinWidth="100"
                        VerticalAlignment="Center"
                        Text="體積"
                        TextAlignment="Right" />
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        MinWidth="100"
                        VerticalAlignment="Center"
                        Text="起始地"
                        TextAlignment="Right" />
                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        MinWidth="100"
                        VerticalAlignment="Center"
                        Text="目的地"
                        TextAlignment="Right" />
                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        MinWidth="100"
                        VerticalAlignment="Center"
                        Text="貨物密度"
                        TextAlignment="Right" />

                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Height="30"
                        MinWidth="200"
                        Margin="3"
                        VerticalAlignment="Center" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="30"
                        MinWidth="200"
                        Margin="3"
                        VerticalAlignment="Center"
                        IsReadOnly="True" />
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Height="30"
                        MinWidth="200"
                        Margin="3"
                        VerticalAlignment="Center"
                        IsReadOnly="True" />
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Height="30"
                        MinWidth="200"
                        Margin="3"
                        VerticalAlignment="Center"
                        IsReadOnly="True" />
                    <TextBox
                        Grid.Row="4"
                        Grid.Column="1"
                        Height="30"
                        MinWidth="200"
                        Margin="3"
                        VerticalAlignment="Center" />
                    <TextBox
                        Grid.Row="5"
                        Grid.Column="1"
                        Height="30"
                        MinWidth="200"
                        Margin="3"
                        VerticalAlignment="Center" />
                    <TextBox
                        Grid.Row="6"
                        Grid.Column="1"
                        Height="30"
                        MinWidth="200"
                        Margin="3"
                        VerticalAlignment="Center" />
                </Grid>

                <!--  詳細訊息  -->
                <Grid Grid.Row="1" />

                <!--  操作按鈕  -->
                <Grid Grid.Row="2" />
            </Grid>
        </Grid>
    </Border>
</Window>
